<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagenConductor"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/icon_perfil"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_fondo_info_conductor">

        <TextView
            android:id="@+id/nombreConductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Conductor"
            android:textSize="16sp"
            android:textColor="@color/azul" />

        <TextView
            android:id="@+id/rutaConductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rutas Conductor"
            android:textSize="14sp"
            android:textColor="@color/gris_oscuro" />

        <TextView
            android:id="@+id/coloniaConductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colonias Conductor"
            android:textSize="14sp"
            android:textColor="@color/gris_oscuro" />

    </LinearLayout>


</LinearLayout>