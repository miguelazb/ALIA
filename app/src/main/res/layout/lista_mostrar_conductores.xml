<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagenConductor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="0dp"
        android:src="@drawable/icon_perfil"
        android:textAlignment="center"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:padding="9dp"
        android:background="@drawable/ic_fondo_info_conductor"
        app:layout_constraintStart_toEndOf="@+id/imagenConductor"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nombreCondcutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Conductora"
            android:textColor="@color/azul"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rutaConductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ruta Elegida"
            android:textColor="@color/gris_oscuro"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nombreCondcutor" />

        <TextView
            android:id="@+id/coloniaConductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colonia Elegida"
            android:textColor="@color/gris_oscuro"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rutaConductor" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>