<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_registro"
    android:orientation="vertical"
    tools:context=".AuthActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:padding="0dp"
        android:src="@drawable/ic_add_photo"
        android:clickable="true"
        android:focusable="true"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="3dp"
        android:layout_gravity="center"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/titulo_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:text="Registro"
        android:textColor="@color/gris_oscuro"
        />

    <EditText
        android:id="@+id/register_nombre"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_marginTop="22dp"
        android:textSize="18sp"
        android:background="@drawable/round_edit_text"
        android:hint="Nombre"
        android:textColor="@color/gris_oscuro"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/register_edad"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_marginTop="13dp"
        android:textSize="18sp"
        android:background="@drawable/round_edit_text"
        android:hint="Edad"
        android:textColor="@color/gris_oscuro"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/register_valores"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_marginTop="13dp"
        android:textSize="18sp"
        android:background="@drawable/round_edit_text"
        android:hint="Valores"
        android:textColor="@color/gris_oscuro"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <Spinner
        android:id="@+id/majors_spinner"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_marginTop="18dp"
        android:hint="Carrera que estudia"
        android:textSize="18sp"
        android:textColor="@color/gris_oscuro"
        android:layout_gravity="center"/>

    <CheckBox
        android:id="@+id/esConductora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="Soy conductora"
        android:buttonTint="@color/gris_oscuro"
        android:textColor="@color/gris_claro"
        android:textSize="18dp"/>


    <Button
        android:id="@+id/btn_listo"
        android:layout_width="150dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_ok_button"
        android:textColor="@color/rosa"
        android:text="Listo"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textSize="18sp"
        />

</LinearLayout>