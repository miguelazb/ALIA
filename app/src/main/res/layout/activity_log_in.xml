<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio_sesion"
    android:orientation="vertical"
    tools:context=".LogInActivity">

    <ImageView
        android:id="@+id/btn_registrar"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:layout_gravity="center"
        android:background="@drawable/logo_alia"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:text="Iniciar sesión"
        android:textColor="@color/azul"
        />
    <EditText
        android:id="@+id/login_correo"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:background="@drawable/round_edit_text"
        android:hint="Correo electrónico"
        android:textColor="@color/gris_oscuro"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/login_contra"
        android:layout_width="250dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:background="@drawable/round_edit_text"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textColor="@color/gris_oscuro"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@color/gris_oscuro"
        android:background="@android:color/transparent"
        android:stateListAnimator="@null"
        android:text="¿Has olvidado tu contraseña?"
        />


    <Button
        android:id="@+id/btn_listo"
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_ok_button"
        android:textColor="@color/rosa"
        android:text="Entrar"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textSize="24sp"
        />

</LinearLayout>